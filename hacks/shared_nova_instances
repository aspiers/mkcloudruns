ex=/opt/dell/chef/cookbooks/nfs-server/templates/default/exports.erb

for i in {1..5} {7..16}
do 
  echo $i
  sed "s/@@i/$i/" nfs_client.yaml | ssh root@crowbar.c$i "cat > /root/nfs_client.yaml"
  ssh root@crowbar.c$i "
    # setup NFS server export
    if ! grep -q nova/instances $ex; then 
      echo '/var/lib/nova/instances <%= @admin_subnet %>/<%= @admin_netmask %>(rw,async,no_root_squash,no_subtree_check)' >> $ex
      echo Added to $ex
    fi
    mkdir -p /var/lib/nova/instances
    knife cookbook upload -o /opt/dell/chef/cookbooks nfs-server

    chef-client && \
    crowbar batch build /root/nfs_client.yaml
  "
done
